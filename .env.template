# FortDocs Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Apple Developer Account Configuration
APPLE_ID=your.apple.id@example.com
TEAM_ID=YOUR_TEAM_ID_HERE
ITC_TEAM_ID=YOUR_ITC_TEAM_ID_HERE

# App Store Connect API Configuration
APP_STORE_CONNECT_API_KEY_PATH=/path/to/your/AuthKey_XXXXXXXXXX.p8
APP_STORE_CONNECT_API_KEY_ID=XXXXXXXXXX
APP_STORE_CONNECT_API_ISSUER_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Keychain Configuration
KEYCHAIN_PASSWORD=your_secure_keychain_password

# Match Configuration (for certificate management)
MATCH_GIT_URL=https://github.com/your-org/certificates
MATCH_PASSWORD=your_match_password

# Notification Configuration (Optional)
SLACK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#fortdocs-releases

# GitHub Configuration (Optional)
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPOSITORY=your-org/fortdocs-ios

# Build Configuration
XCODE_VERSION=15.2
IOS_SIMULATOR=iPhone 15 Pro
IOS_VERSION=17.2

# Security Configuration
ENABLE_SECURITY_SCAN=true
SECURITY_SCAN_TOOL=semgrep

# Testing Configuration
RUN_TESTS_ON_DEPLOY=true
TEST_DEVICES=iPhone 15 Pro,iPad Pro (12.9-inch) (6th generation)

# Deployment Configuration
AUTO_SUBMIT_FOR_REVIEW=false
AUTO_RELEASE_AFTER_APPROVAL=false
BETA_GROUPS=Internal Testing,External Beta

# Logging Configuration
FASTLANE_VERBOSE=false
FASTLANE_LOG_LEVEL=info

# App Configuration
BUNDLE_IDENTIFIER=com.fortdocs.app
APP_NAME=FortDocs
SCHEME_NAME=FortDocs

# Version Configuration
VERSION_BUMP_TYPE=patch
BUILD_NUMBER_AUTO_INCREMENT=true

# Distribution Configuration
EXPORT_METHOD=app-store
INCLUDE_BITCODE=false
INCLUDE_SYMBOLS=true
COMPILE_BITCODE=false

# TestFlight Configuration
TESTFLIGHT_SKIP_WAITING=false
TESTFLIGHT_DISTRIBUTE_EXTERNAL=false
TESTFLIGHT_NOTIFY_EXTERNAL_TESTERS=false

# App Store Configuration
APP_STORE_SKIP_METADATA=false
APP_STORE_SKIP_SCREENSHOTS=false
APP_STORE_FORCE_OVERWRITE=true

# Localization Configuration
SUPPORTED_LANGUAGES=en,de
DEFAULT_LANGUAGE=en

# Marketing Configuration
APP_CATEGORY=Productivity
APP_SUBCATEGORY=Business
CONTENT_RATING=4+

# Privacy Configuration
PRIVACY_POLICY_URL=https://fortdocs.app/privacy
TERMS_OF_SERVICE_URL=https://fortdocs.app/terms
SUPPORT_URL=https://fortdocs.app/support
MARKETING_URL=https://fortdocs.app

# Analytics Configuration (Optional)
ANALYTICS_ENABLED=false
CRASH_REPORTING_ENABLED=true

# Development Configuration
DEVELOPMENT_TEAM=YOUR_DEVELOPMENT_TEAM_ID
CODE_SIGN_IDENTITY=iPhone Distribution
PROVISIONING_PROFILE_SPECIFIER=FortDocs App Store

# CI/CD Configuration
CI_ENVIRONMENT=false
CI_BUILD_NUMBER_PREFIX=ci-
CI_SKIP_INTERACTIVE_PROMPTS=true

# Backup Configuration
BACKUP_BUILDS=true
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/path/to/backup/directory

# Monitoring Configuration
HEALTH_CHECK_URL=https://api.fortdocs.app/health
MONITORING_WEBHOOK=https://your-monitoring-service.com/webhook

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_DEBUG_MENU=false
ENABLE_CRASH_REPORTING=true

# Performance Configuration
PERFORMANCE_TESTING_ENABLED=true
MEMORY_LEAK_DETECTION=true
PERFORMANCE_THRESHOLD_CPU=80
PERFORMANCE_THRESHOLD_MEMORY=512

# Security Testing Configuration
SECURITY_TESTING_ENABLED=true
VULNERABILITY_SCANNING=true
DEPENDENCY_SCANNING=true
CODE_SIGNING_VERIFICATION=true

# Documentation Configuration
GENERATE_DOCUMENTATION=true
DOCUMENTATION_FORMAT=html
DOCUMENTATION_OUTPUT_DIR=./docs

# Cleanup Configuration
AUTO_CLEANUP_BUILDS=true
CLEANUP_OLDER_THAN_DAYS=7
CLEANUP_DERIVED_DATA=true

# Notification Recipients
NOTIFICATION_EMAIL=releases@fortdocs.app
NOTIFICATION_SLACK_USERS=@channel
NOTIFICATION_ON_SUCCESS=true
NOTIFICATION_ON_FAILURE=true

# Custom Build Scripts (Optional)
PRE_BUILD_SCRIPT=./scripts/pre_build.sh
POST_BUILD_SCRIPT=./scripts/post_build.sh
PRE_DEPLOY_SCRIPT=./scripts/pre_deploy.sh
POST_DEPLOY_SCRIPT=./scripts/post_deploy.sh

